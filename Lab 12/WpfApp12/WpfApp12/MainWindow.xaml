<Window x:Class="WpfApp12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="zwierze" HorizontalAlignment="Center" Margin="0,94,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.508,0.503" SelectionChanged="zwierze_SelectionChanged"/>
        <ComboBox x:Name="trudnosc" HorizontalAlignment="Center" Margin="0,152,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="trudnosc_SelectionChanged"/>
        <Button x:Name="start" Content="START" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="Start_Click"/>
        <Label Content="Jakie zwierzątko łapiesz?" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top"/>
        <Label Content="Poziom trudności:" HorizontalAlignment="Center" Margin="0,126,0,0" VerticalAlignment="Top"/>
        <Label Content="Cacher" HorizontalAlignment="Center" Margin="0,3,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>

    </Grid>
</Window>
